{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "tagName": {
        "type": "string",
        "metadata": {
          "description": "Tag name for each resource that gets created"
        },
        "defaultValue": "costCenter"
      },
      "tagValue": {
        "type": "string",
        "metadata": {
          "description": "Tag value for each resource that gets created"
        },
        "defaultValue": "My Cost Center"
      },
      "blueprintAllowedLocations": {
        "type": "array",
        "metadata": {
          "description": "The list of locations that can be specified when deploying resources"
        }
      },
      "blueprintAllowedResourceTypes": {
        "type": "array",
        "metadata": {
          "description": "The list of resource types that can be deployed."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.Resources/resourceGroups",
        "apiVersion": "2021-04-01",
        "location": "[resourceGroup().location]",
        "properties": {},
        "name": "ProdRG",
        "metadata": {
          "displayName": "Production resource group"
        }
      },
      {
        "type": "Microsoft.Authorization/policyAssignments",
        "apiVersion": "2021-06-01",
        "name": "allowed-locations",
        "properties": {
          "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
          "parameters": {
            "listOfAllowedLocations": {
              "value": "[parameters('blueprintAllowedLocations')]"
            }
          },
          "displayName": "Allowed locations for new resources",
          "scope": "[resourceGroup().id]"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Resources/resourceGroups', 'ProdRG')]"
        ]
      },
      {
        "type": "Microsoft.Authorization/policyAssignments",
        "apiVersion": "2021-06-01",
        "name": "allowed-resource-types",
        "properties": {
          "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/a08ec900-254a-4555-9bf5-e42af04b5c5c",
          "parameters": {
            "listOfResourceTypesAllowed": {
              "value": "[parameters('blueprintAllowedResourceTypes')]"
            }
          },
          "displayName": "Allowed resource types",
          "scope": "[resourceGroup().id]"
        },
        "dependsOn": [
          "[resourceId('Microsoft.Resources/resourceGroups', 'ProdRG')]"
        ]
      },
      {
        "type": "Microsoft.Authorization/policyAssignments",
        "apiVersion": "2021-06-01",
        "name": "apply-default-tag",
        "properties": {
          "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/2a0e14a6-b0a6-4fab-991a-187a4f81c498",
          "parameters": {
            "tagName": {
              "value": "[parameters('tagName')]"
            },
            "tagValue": {
              "value": "[parameters('tagValue')]"
            }
          },
          "displayName": "Apply default tag and value to all resources",
          "scope": "[resourceGroup().id]"
        },
        "dependsOn": []
      }
    ]
  }
  