{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managementGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of the management group where the policy will be assigned"
            }
        },
        "tagNames": {
            "type": "array",
            "defaultValue": [ "Owner E-Mail", "CostCenter", "Project", "Environment" ],
            "metadata": {
                "description": "Array of tag names to be inherited from resource groups"
            }
        },
        "allowedLocations": {
            "type": "array",
            "defaultValue": [ "germanywestcentral", "westeurope", "northeurope" ],
            "metadata": {
                "description": "Array of allowed locations for resource deployment. Possible values: eastus, eastus2, southcentralus, westus2, australiaeast, southeastasia, northeurope, swedencentral, uksouth, westeurope, centralus, southafricanorth, centralindia, eastasia, japaneast, koreacentral, canadacentral, francecentral, germanywestcentral, norwayeast, switzerlandnorth, uaenorth, brazilsouth."
            }
        }
    },
    "resources": [
        {
            "condition": "[greaterOrEquals(length(parameters('tagNames')), 1)]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "inh-tag-rg-1",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "[concat('Inherit Tag ', parameters('tagNames')[0], ' from RG')]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/ea3f2387-9b95-492a-a190-fcdc54f7b070",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "parameters": {
                    "tagName": {
                        "value": "[parameters('tagNames')[0]]"
                    }
                }
            }
        },
        {
            "condition": "[greaterOrEquals(length(parameters('tagNames')), 2)]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "inh-tag-rg-2",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "[concat('Inherit Tag ', parameters('tagNames')[1], ' from RG')]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/ea3f2387-9b95-492a-a190-fcdc54f7b070",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "parameters": {
                    "tagName": {
                        "value": "[parameters('tagNames')[1]]"
                    }
                }
            }
        },
        {
            "condition": "[greaterOrEquals(length(parameters('tagNames')), 3)]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "inh-tag-rg-3",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "[concat('Inherit Tag ', parameters('tagNames')[2], ' from RG')]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/ea3f2387-9b95-492a-a190-fcdc54f7b070",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "parameters": {
                    "tagName": {
                        "value": "[parameters('tagNames')[2]]"
                    }
                }
            }
        },
        {
            "condition": "[greaterOrEquals(length(parameters('tagNames')), 4)]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "inh-tag-rg-4",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "[concat('Inherit Tag ', parameters('tagNames')[3], ' on RG')]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/ea3f2387-9b95-492a-a190-fcdc54f7b070",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "parameters": {
                    "tagName": {
                        "value": "[parameters('tagNames')[3]]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "allowed-locations-policy",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "[concat('Allowed locations for ', parameters('managementGroupName'))]",
                "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "parameters": {
                    "listOfAllowedLocations": {
                        "value": "[parameters('allowedLocations')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2021-06-01",
            "name": "securityBenchmark",
            "location": "[deployment().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "displayName": "Microsoft Security Benchmark",
                "policyDefinitionId": "/providers/microsoft.authorization/policysetdefinitions/1f3afdf9-d0c9-4c3d-847f-89da613e70a8",
                "scope": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]",
                "enforcementMode": "DoNotEnforce"
            }
        }
    ]
}
